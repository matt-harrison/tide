{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "*.js", "*.ts"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["dom", "es2022"],
    "module": "esnext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "esnext",
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
